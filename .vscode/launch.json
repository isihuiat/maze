{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/maze", // 実行ファイルのパス
            "args": [], // プログラム引数（必要に応じて設定）
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "D:/MinGW/mingw64/bin/gdb.exe", // GDBのパス
            "preLaunchTask": "CMake: build",
            "logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            },
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}